{{#if newMessages}}
<div class='container'>
    <h1>Inbox</h1>
    <table class='users-table'>
        <tr>
            <th>Message</th>
            <th>From</th>
        </tr>
       {{#each newMessages}}
            <tr class='users-display'>
                <td>{{this.message}}</td>
                <td><a href='/profile/{{this.fromID}}'>{{this.fromName}}</a> <a href='/sendMessage/{{this.fromID}}'><span class='glyphicon glyphicon-envelope'></span></td>
            </tr>
        {{/each}}
    </table>
</div>
{{/if}}